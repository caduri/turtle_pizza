.row#pizza
  .item.col-xs-4.col-lg-4.list-group-item
    .thumbnail
      - @pizza.images.sort_by(&:order_num).each do |image|
        = cl_image_tag image.picture, :width => 200, :height => 200
      .caption
        %h4.group.inner.list-group-item-heading= @pizza.name
        %p.group.inner.list-group-item-text= @pizza.doe_kind.name
        %p.group.inner.list-group-item-text= @pizza.toppings.collect(&:name).join(', ')
        .row
          .col-xs-12.col-md-6.col-md-offset-3
            = link_to "Order", orders_url(:pizza_id => @pizza._id), class: "btn btn-success", data: { method: :post, params: { pizza_id: @pizza._id }.to_param }
